<NameScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex("#2F92C6")
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            pos_hint: {"top": .95, "left": 1}
            size_hint: 1, .1
            text: "Enter The Name Of Food"
            font_size: 60
        TextInput:
            id: title_input
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint: 0.6, 0.12
            hint_text: "Enter the name"
        Button:
            pos_hint: {"center_x": 0.5, "center_y": 0.2} 
            size_hint: 0.5, 0.12
            text: "Press to search food"
            on_release: root.search_food()
            background_normal: ""
            background_color: utils.get_color_from_hex("#D77A61")
